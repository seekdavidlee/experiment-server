<RadzenRow>
    <RadzenStack Orientation="Orientation.Horizontal">
        <RadzenLabel Text="Classification:" />
        @if (FieldKeys is not null)
        {
            <RadzenDropDown Style="width:150px" Data=@FieldKeys @bind-Value=@SelectedFieldKey />
            <RadzenButton Click=@Apply Text="Apply" Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" />
        }
    </RadzenStack>
</RadzenRow>
<RadzenRow>
    @if (isComparisonReady)
    {
        for (var i = 0; i < CompareTables!.Count; i++)
        {
            var tbl = RecallPrecisionTables![i];
            var compareTable = CompareTables[i];
            var sampleSize = SampleSizeTables![i];
            <TableView TableModel="@sampleSize" />
            <TableView TableModel=@tbl />
            <TableView TableModel=@compareTable />
        }
    }
</RadzenRow>