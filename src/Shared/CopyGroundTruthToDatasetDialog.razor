<RadzenStack Orientation="Orientation.Vertical" Style="width:100%">
    @if (ErrorMessage is not null)
    {
        <RadzenAlert AlertStyle="AlertStyle.Danger" Variant="Variant.Flat" Shade="Shade.Lighter">
            @ErrorMessage
        </RadzenAlert>
    }
    <RadzenRow>
        @if (Model is not null)
        {
            var text = $"Select a Dataset copy '{Model.DisplayName}' to:";
            <RadzenLabel Text=@text />
        }
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn>
            <RadzenDropDown @bind-Value=@SelectedDataset Data=@Datasets TextProperty="DisplayName" />
        </RadzenColumn>
        <RadzenColumn>
            <RadzenButton Click=@(args => SaveAsync()) Text="Copy" ButtonStyle="ButtonStyle.Primary" />
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>
