@page "/projects/{ProjectId:guid}/experiments/{ExperimentId:guid}/comparisons"
@using ExperimentServer.Shared
<RadzenStack>
    <RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center" class="rz-p-4 rz-mb-6 rz-border-radius-1" Style="border: var(--rz-grid-cell-border); width:100%;">
            <RadzenButton Click="@Back" Text="Back" ButtonStyle="ButtonStyle.Primary" />
        </RadzenStack>
    </RadzenRow>
    <RadzenRow>
        <RadzenTabs RenderMode="TabRenderMode.Client">
            <Tabs>
                <RadzenTabsItem Text="Inputs/Outputs">
                    <RadzenRow>
                        <TableView TableModel="@Inputs" />
                        <TableView TableModel="@Outputs" />
                    </RadzenRow>
                </RadzenTabsItem>
                <RadzenTabsItem Text="Accuracy">
                    <RadzenRow>
                        <TableView TableModel="@FieldsAccuracy" />
                        @foreach (var failure in PerRunFailureComparisions)
                        {
                            <TableView TableModel="@failure" />
                        }
                    </RadzenRow>
                </RadzenTabsItem>
            </Tabs>
        </RadzenTabs>
    </RadzenRow>
</RadzenStack>



