@page "/ground-truths"
@using ExperimentServer.Shared
@using ExperimentServer.Models

@if (model.AddNewGroundTruth)
{
    <NewGroundTruth Model=@model OnCancel=@CancelAdd OnSave=@(async(gt)=>await OnSaveAsync(gt)) />
}
else
{
    if (model.IsSavingGroundTruth)
    {
        <RadzenAlert Title="Notification" AlertStyle="AlertStyle.Info" Variant="Variant.Flat" Shade="Shade.Lighter">
            Saving, please wait...
        </RadzenAlert>
    }
    <RadzenStack>
        <RadzenRow>
            <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center" class="rz-p-4 rz-mb-6 rz-border-radius-1" Style="border: var(--rz-grid-cell-border); width:100%;">
                <RadzenButton Click=@(args => EnableAdd()) Text="New" ButtonStyle="ButtonStyle.Primary" />
                <RadzenButton Click=@(args => RefreshAsync()) Text="Refresh" ButtonStyle="ButtonStyle.Primary" />
            </RadzenStack>
        </RadzenRow>
        <RadzenRow>
            <RadzenDataGrid @ref="@dataGrid" ColumnWidth="200px" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@model.GroundTruthReferences">
                <HeaderTemplate>
                    <RadzenRow RowGap="0" Style="width:100%">
                        <RadzenText TextStyle="TextStyle.H6" Class="rz-display-flex rz-align-items-center rz-m-0">
                            <RadzenIcon Icon="gavel" class="rz-mr-1" /><b>Ground Truths</b>
                        </RadzenText>
                    </RadzenRow>
                </HeaderTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="GroundTruthReference" Title="Id" Width="50px">
                        <Template Context="entry">
                            @entry.Id
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="GroundTruthReference" Title="Details" Width="50px">
                        <Template Context="entry">
                            <RadzenButton Text="Details" ButtonStyle="ButtonStyle.Info" Click=@(()=>ShowDetails(entry)) />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </RadzenRow>
    </RadzenStack>
}
